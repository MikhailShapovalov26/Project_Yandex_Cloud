groups:
  - name: node_exporter
    rules:
      - alert: PrometheusTargetMissing
        expr: up == 0
        for: 0m
        labels:
          severity: critical
        annotations:
          summary: "Сервис node_exporter на сервере  недоступен"
          description: "Возможно сервис node_exporter упал или сервер недоступен"